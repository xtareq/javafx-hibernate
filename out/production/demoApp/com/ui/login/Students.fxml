<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ui.login.StudentsController">
    <children>
        <Label layoutX="216.0" layoutY="41.0" text="Students">
            <font>
                <Font size="37.0" />
            </font>
        </Label>
        <Button fx:id="btnBack" mnemonicParsing="false" onAction="#handleBtnBack" prefHeight="33.0" prefWidth="105.0" style="-fx-background-color: orange;" text="Back" textFill="#f8f5f5">
         <font>
            <Font name="System Bold Italic" size="13.0" />
         </font></Button>
        <JFXButton fx:id="btnAddUser" buttonType="RAISED" layoutX="18.0" layoutY="113.0" onAction="#handleBtnAddUser" prefHeight="26.0" prefWidth="93.0" style="-fx-background-color: green;" text="+ New" textFill="#fffbfb">
         <font>
            <Font size="18.0" />
         </font></JFXButton>
      <ScrollPane layoutX="10.0" layoutY="157.0" prefHeight="232.0" prefWidth="581.0">
         <content>
            <TableView fx:id="tblStudents" prefHeight="321.0" prefWidth="561.0">
              <columns>
                <TableColumn fx:id="colId" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="colName" prefWidth="299.0" text="Name" />
                  <TableColumn fx:id="colClass" minWidth="0.0" prefWidth="106.0" text="Class" />
                  <TableColumn fx:id="colRoll" text="Roll" />
              </columns>
            </TableView>
         </content>
      </ScrollPane>
      <JFXButton fx:id="btnReload" buttonType="RAISED" layoutX="490.0" layoutY="113.0" onAction="#handleBtnReload" prefHeight="26.0" prefWidth="93.0" style="-fx-background-color: gray;" text="Reload" textFill="#fffbfb">
         <font>
            <Font size="18.0" />
         </font>
      </JFXButton>
    </children>
</AnchorPane>
